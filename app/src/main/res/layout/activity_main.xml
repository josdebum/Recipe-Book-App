<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:id="@+id/welcome"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe Book"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:id="@+id/recipe"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/input"
        app:layout_constraintTop_toBottomOf="@id/recipe"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:textColorHint="#FFFFFF"
        android:paddingStart="20dp"
        android:hint="Email"
        android:id="@+id/input_email"
        android:paddingLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/input"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/input_password"
        android:textColorHint="#FFFFFF"
        android:hint="Password"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forget password?"
        android:textColor="#FFFFFF"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:id="@+id/forget_password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/login_background"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:id="@+id/login"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Login"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#34A853"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with"
        android:textColor="#FFFFFF"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:id="@+id/login_with"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/blue_round_button"
        app:layout_constraintTop_toBottomOf="@id/login_with"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:id="@+id/login_with_facebook"
        android:textSize="14sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_f"
        android:textColor="#34A853"
        android:drawableLeft="@drawable/ic_f"
        android:layout_marginRight="20dp"
        android:paddingLeft="58dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/login_with_google"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_background"
        android:drawableStart="@drawable/ic_google_icon"
        android:drawableLeft="@drawable/ic_google_icon"
        android:textColor="#34A853"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="58dp"
        android:layout_marginRight="60dp"
        app:layout_constraintTop_toBottomOf="@id/login_with"
        android:paddingLeft="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_with_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/or"
        />

    <Button
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/green_round_background"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_with_google"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"/>



</androidx.constraintlayout.widget.ConstraintLayout>